<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.hasali.zenith">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />

    <queries>
        <!--Android 11 only makes certain apps on the system visible to your app. This list includes
        the app that installed your app, which would typically be the Google Play Store.
        However, in our case the app is sideloaded so the Play Store might not be visible (at least
        it doesn't seem to be on my device running Lineage OS with OpenGapps) - this is a problem
        since Google Play Services checks to make sure it's installed, so we need to explicitly add
        this. See https://developer.android.com/training/package-visibility/automatic-->
        <package android:name="com.android.vending" />
    </queries>

    <application
        android:name=".ZenithApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Zenith"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Zenith">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SelectServerActivity"
            android:theme="@style/Theme.Zenith" />

        <receiver android:name=".InstallReceiver" />

        <meta-data
            android:name="com.google.android.gms.cast.framework.OPTIONS_PROVIDER_CLASS_NAME"
            android:value="uk.hasali.zenith.CastOptionsProvider" />

    </application>

</manifest>
