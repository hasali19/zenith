<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.co.hasali.zenith">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Zenith"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".ui.main.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Zenith">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.setup.SetupActivity"
            android:theme="@style/Theme.Zenith" />

        <activity
            android:name=".ui.moviedetails.MovieDetailsActivity"
            android:theme="@style/Theme.Zenith" />

        <activity
            android:name=".ui.showdetails.ShowDetailsActivity"
            android:theme="@style/Theme.Zenith" />

        <activity
            android:name=".ui.episodes.EpisodesActivity"
            android:theme="@style/Theme.Zenith" />

        <activity
            android:name=".ui.videoplayer.VideoPlayerActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode"
            android:theme="@style/Theme.Zenith" />

    </application>

</manifest>
